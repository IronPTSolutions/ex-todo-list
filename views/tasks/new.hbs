<h2 class="mb-2">Create new Task</h2>
<form action="/tasks" method="POST">

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-tag fa-fw"></i></span>
    <input type="text" name="title" value="{{ task.title }}" class="form-control {{#if errors.title }}is-invalid{{/if}}" placeholder="Enter task title..." />
    {{#if errors.title }}<div class="invalid-feedback">{{ errors.title }}</div>{{/if}}
  </div>

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-edit fa-fw"></i></span>
    <textarea class="form-control {{#if errors.description }}is-invalid{{/if}}" name="description" aria-label="Task description">{{ task.description}}</textarea>
    {{#if errors.description }}<div class="invalid-feedback">{{ errors.description }}</div>{{/if}}
  </div>

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
    <input type="text" name="image" value="{{ task.image }}" class="form-control {{#if errors.image }}is-invalid{{/if}}"
      placeholder="Enter task image url..." />
    {{#if errors.image }}<div class="invalid-feedback">{{ errors.image }}</div>{{/if}}
  </div>

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-globe fa-fw"></i></span>
    <input type="text" name="address" value="{{ task.address }}" class="form-control g-places-finder {{#if errors.address }}is-invalid{{/if}}"
      placeholder="Enter address..." />
    {{#if errors.address }}<div class="invalid-feedback">{{ errors.address }}</div>{{/if}}
  </div>

  <input type="hidden" name="lat" value="{{ task.lat }}" />
  <input type="hidden" name="lng" value="{{ task.lng }}" />

  <button type="submit" class="btn btn-primary">Submit</button>
</form>